.header {
  display: flex;
  align-items: center;
  height: 60px;
  border-bottom: 1px solid $bitdj-color-border;
  background-color: $bitdj-color-background;

  .hamburger-menu-icon {
    border-right: 1px solid $bitdj-color-border;
    width: 50rem;
    height: 90%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rem;
    color: $bitdj-color-text;
    margin-right: 20rem;
  }

  .title {
    color: $bitdj-color-text;
    margin-right: 20rem;
  }

  .profile-photo {
    height: 40px;
    width: 40px;
    border-radius: 50%;
    overflow: hidden;
    border: 1px solid $bitdj-color-border;
    img {
      height: 100%;
      width: 100%;
    }
  }
}
