.site {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  transition:all 1s ease-in;

  .site-content {
    transition:all 1s ease-in;

    > * {
      width: 100%;
    }

    // HACK!
    width: 100%;
    height: calc("100% - 61px");
    display: flex;
    flex-direction: row;
  }
  .hamburger-menu {
    height: 100%;
    border-right: 1px solid $bitdj-color-border;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    transition: all 1s ease-in;


    .items {
      text-align: center;
    }

    .items .nav-item {
      display: flex;
      height: 25px;
      padding: 10px 0 10px 18px;
      width: 220px;
      align-items: center;
    }

    .items .nav-item i {
      font-size: 25rem;
      margin-right: 16rem;
    }

    &.expanded {
      width: 240px;
      background-color: $bitdj-color-background;
    }

    &.expanded .title { justify-content: flex-start; }

  }
}
